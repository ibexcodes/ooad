<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="500.0" prefWidth="600.0" styleClass="Blue-pane1" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankingsystem.CustomerProfileController">
    <Label text="Customer Profile" textFill="#2196f3">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
        <VBox.margin>
            <Insets bottom="20.0" left="20.0" />
        </VBox.margin>
    </Label>
    <GridPane hgap="10.0" vgap="10.0">
        <padding>
            <Insets left="20.0" />
        </padding>
        <Label text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="fullName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        <Label text="Date of Birth:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="dateOfBirth" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <Label text="Gender:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="gender" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <Label text="National ID:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="nationalId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <Label text="Contact Number:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="contactNumber" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        <Label text="Email Address:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="emailAddress" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        <Label text="Residential Address:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="residentialAddress" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        <Label text="Next of Kin:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="nextOfKin" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        <Label text="Occupation:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <TextField fx:id="occupation" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="8" />
        <Label fx:id="companyNameLabel" text="Company Name:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
        <TextField fx:id="companyName" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="9" />
        <Label fx:id="companyRegIdLabel" text="Company Registration ID:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
        <TextField fx:id="companyRegistrationId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="10" />
        <Label fx:id="dateEstLabel" text="Date of Establishment:" GridPane.columnIndex="0" GridPane.rowIndex="11" />
        <TextField fx:id="dateOfEstablishment" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="11" />
    </GridPane>
</VBox>