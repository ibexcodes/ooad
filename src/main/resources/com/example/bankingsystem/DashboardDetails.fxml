<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="489.0" prefWidth="1030.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.bankingsystem.DashboardDetailsController">
    <children>
        <Pane prefHeight="489.0" prefWidth="1030.0" styleClass="card-pane" stylesheets="@styles.css">
            <children>
                <Text fill="#446fc7" layoutX="120.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MAKE A DEPOSIT">
                    <font>
                        <Font name="System Bold" size="23.0" />
                    </font>
                </Text>

                <Text fill="WHITE" layoutX="50.0" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Account:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Text>
                <ComboBox fx:id="depositAccountComboBox" layoutX="50.0" layoutY="115.0" prefHeight="32.0" prefWidth="250.0" promptText="Select Account Number/Type" stylesheets="@styles.css" />

                <Text fill="WHITE" layoutX="51.0" layoutY="299.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Amount (BWP):">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Text>
                <TextField fx:id="depositAmountField" layoutX="50.0" layoutY="312.0" prefHeight="26.0" prefWidth="250.0" promptText="Enter amount to deposit" styleClass="VBox" stylesheets="@styles.css" />

                <Button layoutX="120.0" layoutY="395.0" onAction="#handleDeposit" prefHeight="33.0" prefWidth="110.0" styleClass="bluebtn" stylesheets="@styles.css" text="Deposit">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>

                <Text fill="#446fc7" layoutX="670.0" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MAKE A WITHDRAWAL">
                    <font>
                        <Font name="System Bold" size="23.0" />
                    </font>
                </Text>

                <Text fill="WHITE" layoutX="670.0" layoutY="100.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Select Account:">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Text>
                <ComboBox fx:id="withdrawAccountComboBox" layoutX="670.0" layoutY="115.0" prefHeight="32.0" prefWidth="250.0" promptText="Select Account Number/Type" styleClass="combo-box" stylesheets="@styles.css" />

                <Text fill="WHITE" layoutX="671.0" layoutY="299.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Amount (BWP):">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Text>
                <TextField fx:id="withdrawAmountField" layoutX="657.0" layoutY="312.0" prefHeight="26.0" prefWidth="250.0" promptText="Enter amount to withdraw" styleClass="VBox" stylesheets="@styles.css" />

                <Button layoutX="740.0" layoutY="395.0" onAction="#handleWithdrawal" prefHeight="33.0" prefWidth="110.0" styleClass="bluebtn" stylesheets="@styles.css" text="Withdraw">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
               
                <Text fx:id="statusText" fill="#ff4d4d" layoutX="207.0" layoutY="470.0" strokeType="OUTSIDE" strokeWidth="0.0" text="" wrappingWidth="900.0">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Text>

            </children>
        </Pane>
    </children>
</AnchorPane>
